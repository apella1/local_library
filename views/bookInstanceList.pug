extends layout

block content
	h1(class="text-4xl font-bold")= title
	ul(class="list-decimal p-8 mt-4")
		each val in bookInstanceList
			li 
				a(href=val.url class="text-lg text-blue-600 hover:underline"): #{val.book.title} - #{val.imprint} - 
				if val.status=='Available'
					span(class="text-green-500") #{val.status}
				else if val.status=='Maintenance'
					span(class="text-orange-500") #{val.status}
				else 
					span(class="text-red-500") #{val.status}
				if val.status!='Available'
					span(class="italic") (Due: #{val.dueBackFormatted})
		else
				li There are no book copies in this library
