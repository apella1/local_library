extends layout

block content
  h1(class="text-4xl font-bold")=title

  form(method='POST' action='' class="flex flex-col p-8 m-4 space-y-3")
    div(class="flex flex-col p-8 m-4 space-y-4 items-center")
      label(for='firstName' class="text-xl font-medium") First Name:
      input(type='text' id="firstName" placeholder='First name' class="border border-gray-700 rounded-md p-2" name='firstName' required='true' value=(undefined===author ? '' : author.firstName) )
      label(for='lastName' class="text-xl font-medium") Last Name:
      input(type='text' id="lastName" class="border border-gray-700 rounded-md p-2" placeholder='Last name' name='lastName' required='true' value=(undefined===author ? '' : author.lastName))
    div(class="flex flex-col p-8 m-4 space-y-4 items-center")
      label(for='dateOfBirth' class="text-xl font-medium") Date of birth:
      input(type='date' name='dateOfBirth' class="border border-gray-700 rounded-md p-2" id="dateOfBirth" value=(undefined===author ? '' : author.dateOfBirth) )
      label(for='dateOfDeath' class="text-xl font-medium") Date of Death:
      input(type='date' name='dateOfDeath' class="border border-gray-700 rounded-md p-2" id="dateOfDeath" value=(undefined===author ? '' : author.dateOfDeath) )
    button(type='submit' class="text-white bg-blue-800 px-2 py-4 rounded-lg hover:bg-blue-500") Submit
  if errors
    ul
      for error in errors
        li!= error.msg
